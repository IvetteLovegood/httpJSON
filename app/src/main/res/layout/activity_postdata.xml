<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.johno_000.json.Postdata">

   <EditText
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:id="@+id/email"
       android:hint="email"
       android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/companyName"
        android:hint="companyName"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/email"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="name"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/companyName"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastnameP"
        android:hint="lastnameP"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/name"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastnameM"
        android:hint="lastnameM"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/lastnameP"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginname"
        android:hint="loginname"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/lastnameM"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cif"
        android:hint="cif"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/loginname"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="password"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/cif"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textSize="18dp"
        android:background="#222fff"
        android:id="@+id/btnPost"
        android:layout_below="@+id/cif"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
